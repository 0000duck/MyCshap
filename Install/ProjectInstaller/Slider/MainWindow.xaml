<Window x:Class="Slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtSliderValue" Width="100" Height="20"></TextBox>
        <Slider x:Name="sliderTest" HorizontalAlignment="Left" Width="200" Margin="160,95,0,0" VerticalAlignment="Top"
                Maximum="10000" Minimum="3000" TickFrequency="100" TickPlacement="None" IsSnapToTickEnabled="True" ValueChanged="sliderTest_ValueChanged">
        </Slider>
    </Grid>
</Window>
