<Page x:Class="InterfaceAndEvent.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterfaceAndEvent"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page3" Background="Green">

    <Grid>
        <Label Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center">Page 3</Label>
        <Button Name="btnNextPage" Width="80" Height="30" HorizontalAlignment="Right" Margin="0,0,20,0" Click="btnNextPage_Click">Next Page</Button>
        <Button Name="btnBackPage" Width="80" Height="30" HorizontalAlignment="Left" Margin="20,0,0,0" Click="btnBackPage_Click">Back Page</Button>
    </Grid>
</Page>
