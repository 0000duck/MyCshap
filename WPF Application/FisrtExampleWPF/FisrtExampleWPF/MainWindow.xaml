<Window x:Class="FisrtExampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FisrtExampleWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Cursor="None">
        <MediaElement Name="Player" Visibility="Collapsed" />
        <Grid Name="Remote" Visibility="Visible">
            <TextBox x:Name="txbTextBox" HorizontalAlignment="Left" Height="23" Margin="111,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306"/>
            <Button x:Name="btnHello" Content="Hello!" HorizontalAlignment="Left" Margin="229,103,0,0" VerticalAlignment="Top" Width="75" Click="btnHello_Click"/>
        </Grid>
    </Grid>
</Window>
