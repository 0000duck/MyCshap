<Window x:Class="BordersWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BordersWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
        <StackPanel Margin="5" DockPanel.Dock="Left" MaxWidth="150">
            <Border Background="White" BorderBrush="Green" BorderThickness="2" CornerRadius="10">
                <Expander Margin="5" IsExpanded="True" Background="White" Header="Expander Items">
                    <StackPanel Margin="5">
                        <TextBlock>Item 1</TextBlock>
                        <TextBlock>Item 2</TextBlock>
                        <TextBlock>Item 3</TextBlock>
                        <TextBlock>Item 4</TextBlock>
                        <TextBlock>Item 5</TextBlock>
                    </StackPanel>
                </Expander>
            </Border>
        </StackPanel>
    </DockPanel>
</Window>
